@model TeamManageSystem.Models.Account.Task
@{
    ViewData["Title"] = "AddTaskRating";
    Layout = "~/Views/Shared/_Layout_forDashboard.cshtml";
}

<style>
    /* Custom CSS for radio buttons */
    .btn-group .btn-secondary input[type="radio"]:checked + i {
        color: gold;
    }
</style>

<h1>Add Task Ratings Here</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTaskRating" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" value="@Context.Request.Query["id"]" />
            <div>
            <label asp-for="TaskRate" class="control-label">RATING</label>
            </div>
            <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-secondary">
                    <input type="radio" name="TaskRate" value="1">
                    <i class="fas fa-thumbs-down"></i>
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="TaskRate" value="2">
                    <i class="fas fa-meh"></i>
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="TaskRate" value="3">
                    <i class="fas fa-thumbs-up"></i>
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="TaskRate" value="4">
                    <i class="fas fa-smile"></i>
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="TaskRate" value="5">
                    <i class="fas fa-grin-stars"></i>
                </label>
                <!-- Add more options as needed -->
            </div>
            <div>
                <h6>   </h6>
            </div>
            <div class="form-group">
                <input type="submit" value="ADD" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

