@model TeamManageSystem.Models.Account.SprintRating
@{
    ViewData["Title"] = "AddSprintRating";
    Layout = "~/Views/Shared/_Layout_forDashboard.cshtml";
}
<style>
    /* Custom CSS for radio buttons */
    .btn-group .btn-secondary input[type="radio"]:checked + i {
        color: gold;
    }
</style>


<h1>AddSprintRating</h1>
<div class="container">
    <div class="row mt-lg-5">
        <div class="col-4 offset-4 border border-primary rounded p-lg-4">
            <div class="text-center">
                <h1 class="text-info">Member Rating</h1>
            </div>
            <form method="post" asp-action="AddSprintRating">
                @Html.AntiForgeryToken()
                <input type="hidden" name="SprintId" value="@Context.Request.Query["id"]" />
                <div class="form-group">
                    <div>
                        <label asp-for="SRating" class="control-label">RATING</label>
                    </div>
                    <div class="btn-group" data-toggle="buttons">
                        <label class="btn btn-secondary">
                            <input type="radio" name="SRating" value="1">
                            <i class="fas fa-thumbs-down"></i>
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" name="SRating" value="2">
                            <i class="fas fa-meh"></i>
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" name="SRating" value="3">
                            <i class="fas fa-thumbs-up"></i>
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" name="SRating" value="4">
                            <i class="fas fa-smile"></i>
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" name="SRating" value="5">
                            <i class="fas fa-grin-stars"></i>
                        </label>
                        <!-- Add more options as needed -->
                    </div>
                </div>
                <div><h5>  </h5></div>
                <div class="form-group">
                    <label asp-for="Mid">Assignee Name:</label>
                    <h4>   </h4>
                    <select asp-for="Mid" class="form-control" asp-items="ViewBag.AssigneeList"></select>
                </div>
                <div><h2>  </h2></div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary float-lg-end" value="ADD" />
                </div>
            </form>
        </div>
    </div>
</div>
@*style="background-color: lavenderblush"*@

