@model TeamManageSystem.Models.Account.User
<style>
    .color-btn{
        background-color:gray;
        color:white;
    }

    .edit-button-container {
        text-align: left;
        margin-left: 230px; /* Adjust the value as needed */
    }

    .rounded-left-right {
        border-radius: 25px 25px 25px 25px;
    }

    .custom-input {
        height: 50px; /* Adjust the value to increase or decrease the height */
    }

    .custom-btn-width {
        width: 600px; /* Adjust the value to increase or decrease the width */
    }
</style>
<div><h5>  </h5></div>
    <form asp-action="EditProfile" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
        <input asp-for="Username" class="form-control rounded-left-right custom-input" style="background-color: aliceblue;" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
    <div><h5>  </h5></div>
        <div class="form-group">
        <input asp-for="Email" class="form-control rounded-left-right custom-input" style="background-color: aliceblue;" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    <div><h5>  </h5></div>
        <div class="form-group">
        <input asp-for="Mobile" class="form-control rounded-left-right custom-input" style="background-color: aliceblue;" />
            <span asp-validation-for="Mobile" class="text-danger"></span>
        </div>
    <div><h5>  </h5></div>
        <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary rounded-left-right custom-input custom-btn-width" />
        </div>
    </form>

