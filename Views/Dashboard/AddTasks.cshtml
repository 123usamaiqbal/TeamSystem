@model TeamManageSystem.Models.Account.Task
@{
    ViewData["Title"] = "AddTasks";
    Layout = "~/Views/Shared/_Layout_forDashboard.cshtml";
}

<div class="container">
    <div class="row mt-lg-5">
        <div class="col-4 offset-4 border border-primary rounded p-lg-4">
            <div class="text-center">
                <h1 class="text-info">Add Tasks</h1>
            </div>
            <form method="post" asp-action="AddTasks">
                <input type="hidden" name="Id" value="@Context.Request.Query["id"]" />
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <h4>   </h4>
                    <input type="text" asp-for="Title" placeholder="Enter Task Title" class="form-control" autocomplete="off" />
                </div>
                <div><h5>  </h5></div>
                <div class="form-group">
                    <label asp-for="AssigneeId">Assignee Name:</label>
                    <h4>   </h4>
                    <select asp-for="AssigneeId" class="form-control" asp-items="ViewBag.AssigneeList"></select>
                </div>
                <div><h2>  </h2></div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary float-lg-end" value="ADD" />
                </div>
            </form>
        </div>
    </div>
</div>
@*style="background-color: lavenderblush"*@

