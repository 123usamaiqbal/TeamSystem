@model IEnumerable<TeamManageSystem.Models.Account.Sprint>
@{
    ViewData["Title"] = "FilterSprints";
    Layout = "~/Views/Shared/_Layout_forDashboard.cshtml";
}

<style>
    /* Apply flexbox container styles */
    .flex-container {
        display: flex;
        justify-content: space-between;
    }

        /* Optional styling for the <h1> elements */
        .flex-container h1 {
            margin: 0;
        }


</style>

<div class="flex-container">
    <h1>SPRINTS</h1>
</div>

@foreach (var item in Model)
{
    <div>
        <hr />
        <div class="card bg-light mb-3" style="width:30rem" box-shadow="0 4px 8px rgba(0, 0, 0, 0.1)" >
            <div class="card-header">Sprints</div>
            <div class="card-body" align="center">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(modelItem => item.Title)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.SDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(modelItem => item.SDate)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.EDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(modelItem => item.EDate)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="AddSprintRating" asp-route-id="@item.Id" class="btn btn-dark m-2">Add Sprint Rating</a>
                <!--<a asp-action="ViewTasks" asp-route-id="@item.Id" class="btn btn-success m-2">View Tasks</a>-->
                <!--<input type="submit" asp-action="Edit" asp-route-id="@item.Id" value="Edit" class="btn btn-info" />-->
                <!--<input type="submit" asp-action="Index" value="Back to List" class="btn btn-primary" />-->
                <a asp-action="TDashboard" class="btn btn-info m-2">Back</a>
            </div>
        </div>
    </div>
}
<div class="d-flex justify-content-end">
    <a asp-action="TDashboard" class="btn btn-info">Go Back</a>
</div>

