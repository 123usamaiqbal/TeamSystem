@model TeamManageSystem.Models.Account.Sprint
@{
    ViewData["Title"] = "DeleteConfirmed";
    Layout = "~/Views/Shared/_Layout_forDashboard.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Sprint</h3>
<div>
    <h4>Sprints</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EDate)
        </dd>
    </dl>

    <form asp-action="DeleteSprint">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete Confirmed" class="btn btn-danger" />
        <input type="submit" asp-action="ViewSprints" value="Back to Sprints" class="btn btn-info" />
        <!--<a asp-action="Index">Back to List</a>-->
    </form>
</div>

